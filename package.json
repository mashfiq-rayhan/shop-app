    "_moduleAliases": {
        "@errors": "src/errors",
        "@config": "src/config",
        "@common": "src/common",
        "@middlewares": "src/middlewares",
        "@modules": "src/modules",
        "@utils": "src/utils",
        "@provider": "src/utils/provider"
